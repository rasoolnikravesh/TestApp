	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ActionPermission</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ActionId" class="control-label"></label>
